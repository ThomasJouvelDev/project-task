<div class="flex items-center justify-around">
  <div>
    <h1>Tasks</h1>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <%= render task %>
      <% end %>
    </div>

    <%= link_to 'Tâches', tasks_path, class: 'button__default' %>
    <%= link_to "New task", new_task_path, class: 'button__primary' %>

    <div class="mt-5">
      <h1>Recurring Tasks</h1>

      <div id="recurring_tasks">
        <% @recurring_tasks.each do |recurring_task| %>
          <%= render recurring_task %>
        <% end %>
      </div>

      <%= link_to 'Tâches récurrentes', recurring_tasks_path, class: 'button__default' %>
      <%= link_to "New Recurring task", new_recurring_task_path, class: 'button__primary' %>
      <%= link_to "Générer les tâches récurrents", generate_recurring_task_path, class: 'button__success'  %>
    </div>
  </div>
  <div>
    <h1>Goals</h1>

    <div id="goals">
      <% @goals.each do |goal| %>
        <%= render goal %>
      <% end %>
    </div>

    <%= link_to 'Objectifs', goals_path, class: 'button__default' %>
    <%= link_to "New goal", new_goal_path, class: 'button__primary' %>
  </div>
</div>
